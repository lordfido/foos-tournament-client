{
  "name": "foos-tournament-client",
  "version": "0.1.0",
  "displayName": "Foos Tournament Client",
  "description": "A PWA to watch Foos Tournament info",
  "main": "index.js",
  "repository": "git@github.com:lordfido/foos-tournament-client.git",
  "author": "Rafael Pérez García <rafael.perez@imperdiblesoft.com.com>",
  "license": "MIT",
  "homepage": "https://localhost:8080",
  "lint-staged": {
    "linters": {
      "./src/**/*.js": [
        "npm run prettier",
        "npm run lint",
        "git add"
      ]
    }
  },
  "scripts": {
    "lint": "tslint ./**/*.ts ./**/*.tsx",
    "check-types": "tsc",
    "prettier": "prettier --config .prettierrc --write './src/**/*.tsx' './src/**/*.ts' './src/**/*.js'",
    "clean:build": "rimraf dist",
    "pre-build": "npm run lint && npm run check-types && npm run prettier && npm run clean:build",
    "build:dev": "npm run pre-build && webpack --config ./webpack/dev.config.ts",
    "build:pre": "npm run pre-build && webpack --config ./webpack/pre.config.ts",
    "build": "npm run pre-build && webpack --config ./webpack/prod.config.ts",
    "serve:https": "webpack-dev-server --host 0.0.0.0 --https true --config ./webpack/dev.config.ts",
    "precommit": "lint-staged",
    "serve:dev": "webpack-dev-server --https true --host 0.0.0.0 --config ./webpack/dev.config.ts --cert=./cert/webapp-dev-server.crt --key=./cert/webapp-dev-server.key",
    "serve:pre": "webpack-dev-server --https true --host 0.0.0.0 --config ./webpack/pre.config.ts --cert=./cert/webapp-dev-server.crt --key=./cert/webapp-dev-server.key",
    "serve": "webpack-dev-server --https true --host 0.0.0.0 --config ./webpack/prod.config.ts --cert=./cert/webapp-dev-server.crt --key=./cert/webapp-dev-server.key",
    "start": "npm run serve:dev"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "chroma-js": "^2.0.2",
    "classnames": "^2.2.6",
    "compare-versions": "^3.4.0",
    "history": "^4.7.2",
    "idb-keyval": "^3.2.0",
    "jss": "^9.8.7",
    "moment": "^2.24.0",
    "pwacompat": "^2.0.8",
    "query-string": "^6.2.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-ga": "^2.5.7",
    "react-jss": "^8.6.1",
    "react-media": "^1.9.2",
    "react-redux": "^7.0.2",
    "react-router-dom": "^5.0.0",
    "react-select": "^2.4.3",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/plugin-transform-async-to-generator": "^7.2.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@types/chroma-js": "^1.4.1",
    "@types/classnames": "^2.2.7",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/jss": "^9.5.7",
    "@types/node": "^11.13.7",
    "@types/react": "^16.8.14",
    "@types/react-dom": "^16.8.4",
    "@types/react-jss": "^8.6.1",
    "@types/react-redux": "^7.0.8",
    "@types/react-router-dom": "^4.3.2",
    "@types/react-select": "^2.0.17",
    "@types/uglifyjs-webpack-plugin": "^1.1.0",
    "@types/uuid": "^3.4.4",
    "@types/webpack": "^4.4.27",
    "autoprefixer": "^9.5.1",
    "babel-loader": "^8.0.5",
    "babel-polyfill": "^6.26.0",
    "cross-env": "^5.2.0",
    "file-loader": "^3.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.1.0",
    "image-webpack-loader": "^4.6.0",
    "lint-staged": "^8.1.3",
    "path": "^0.12.7",
    "prettier": "^1.17.0",
    "react-hot-loader": "^4.8.4",
    "request": "^2.88.0",
    "rimraf": "^2.6.3",
    "source-map-loader": "^0.2.4",
    "terser-webpack-plugin": "^1.2.1",
    "ts-lint": "^4.5.1",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1",
    "webpack-pwa-manifest": "^4.0.0"
  }
}
