{
  "name": "foos-tournament-client",
  "version": "1.0.0",
  "description": "A web client for Foos Tournament",
  "main": "index.js",
  "repository": "git@github.com:lordfido/foos-tournament-client.git",
  "author": "Rafael PÃ©rez <rperez@tuenti.com>",
  "license": "MIT",
  "lint-staged": {
    "linters": {
      "./src/**/*.js": [
        "npm run prettier",
        "npm run lint",
        "git add"
      ]
    }
  },
  "scripts": {
    "check-types": "tsc",
    "prettier": "prettier --config .prettierrc --write './src/**/*.tsx' './src/**/*.ts' './src/**/*.js'",
    "lint": "eslint --ignore-path .eslintignore ./src",
    "ts": "tsc",
    "clean:build": "rimraf dist",
    "pre-build": "npm run check-types && npm run prettier && npm run lint && npm run clean:build",
    "build:dev": "npm run pre-build && webpack --config ./webpack/dev.config.ts",
    "build:pre": "npm run pre-build && webpack --config ./webpack/pre.config.ts",
    "build": "npm run pre-build && webpack --config ./webpack/prod.config.ts",
    "serve:https": "webpack-dev-server --host 0.0.0.0 --https true --config ./webpack/dev.config.ts",
    "precommit": "lint-staged",
    "serve:dev": "webpack-dev-server --https true --hotOnly true --host 0.0.0.0 --config ./webpack/dev.config.ts --cert=./cert/webapp-dev-server.crt --key=./cert/webapp-dev-server.key",
    "serve:pre": "webpack-dev-server --https true --host 0.0.0.0 --config ./webpack/pre.config.ts --cert=./cert/webapp-dev-server.crt --key=./cert/webapp-dev-server.key",
    "serve": "webpack-dev-server --https true --host 0.0.0.0 --config ./webpack/prod.config.ts --cert=./cert/webapp-dev-server.crt --key=./cert/webapp-dev-server.key",
    "start": "npm run serve:dev"
  },
  "dependencies": {
    "@types/classnames": "^2.2.6",
    "@types/query-string": "^6.1.1",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/react-redux": "^6.0.9",
    "@types/react-router-dom": "^4.3.1",
    "@types/webpack": "^4.4.17",
    "axios": "^0.18.0",
    "classnames": "^2.2.6",
    "compare-versions": "^3.4.0",
    "idb-keyval": "^3.1.0",
    "moment": "^2.22.2",
    "pwacompat": "^2.0.7",
    "query-string": "^6.2.0",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-redux": "^5.1.0",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-jsx": "^7.0.0",
    "@babel/plugin-transform-async-to-generator": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/node": "^10.12.2",
    "@types/uglifyjs-webpack-plugin": "^1.1.0",
    "@types/uuid": "^3.4.4",
    "autoprefixer": "^9.3.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "file-loader": "^2.0.0",
    "font-awesome": "^4.7.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.3",
    "image-webpack-loader": "^4.5.0",
    "lint-staged": "^8.0.4",
    "node-sass": "^4.10.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.14.3",
    "react-hot-loader": "^4.3.12",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.1.0",
    "ts-lint": "^4.5.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-pwa-manifest": "^3.7.1"
  }
}
